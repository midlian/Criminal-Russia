<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/brp_dialog_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/_8sdp"
    android:minWidth="@dimen/_141sdp">

    <ImageView
        android:id="@+id/brp_dialog_item_bg"
        android:src="@drawable/dialog_item_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/brp_dialog_item_field1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:fontFamily="@font/muller_medium"
        android:lines="1"
        android:maxLines="1"
        android:paddingTop="@dimen/_3sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:singleLine="true"
        android:text="Field1\t"
        android:textColor="#ffffff"
        android:textSize="@dimen/_8sdp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/brp_dialog_item_field2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muller_medium"
        android:lines="1"
        android:maxLines="1"
        android:paddingTop="@dimen/_3sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:singleLine="true"
        android:text="Field2\t"
        android:textColor="#ffffff"
        android:textSize="@dimen/_8sdp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/brp_dialog_item_field1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/brp_dialog_item_field3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muller_medium"
        android:lines="1"
        android:maxLines="1"
        android:paddingTop="@dimen/_3sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:singleLine="true"
        android:text="Field3\t"
        android:textColor="#ffffff"
        android:textSize="@dimen/_8sdp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/brp_dialog_item_field2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/brp_dialog_item_field4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muller_medium"
        android:lines="1"
        android:maxLines="1"
        android:paddingTop="@dimen/_3sdp"
        android:paddingEnd="@dimen/_4sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:singleLine="true"
        android:text="Field4"
        android:textColor="#ffffff"
        android:textSize="@dimen/_8sdp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/brp_dialog_item_field3"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
