<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/brp_welcome_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:src="@drawable/ic_welcome_bg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/brp_welcome" />

    <TextView
        android:id="@+id/brp_welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="ЗБТ - Criminal Russia"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_22sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.341" />

    <TextView
        android:id="@+id/brp_welcome_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/akrobat_semibold"
        android:text="Желаем удачного тестирования!"
        android:textAllCaps="false"
        android:textColor="#80FFFFFF"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/brp_welcome_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/brp_welcome_title"
        app:layout_constraintTop_toBottomOf="@+id/brp_welcome_title"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/brp_welcome_btn"
        android:layout_width="@dimen/_139sdp"
        android:layout_height="@dimen/_36sdp"
        android:background="@drawable/btn_welcome_play"
        android:text="@string/start_game"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/brp_welcome_desc"
        app:layout_constraintStart_toStartOf="@+id/brp_welcome_desc"
        app:layout_constraintTop_toBottomOf="@+id/brp_welcome_desc"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>