<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_170sdp"
    android:layout_height="@dimen/_100sdp"
    android:layout_gravity="center"
    android:layout_marginRight="@dimen/_10sdp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_100sdp"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/server"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/brp_launcher_server_update"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:background="@drawable/update_server_on"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/brp_launcher_server_double"
            app:layout_constraintTop_toTopOf="@+id/brp_launcher_server_double" />

        <TextView
            android:id="@+id/brp_launcher_server_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Criminal Russia #01"
            android:textColor="#ffffff"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/brp_launcher_server_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/brp_launcher_server_title" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="/1000"
            android:textColor="#48ffffff"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toEndOf="@+id/brp_launcher_server_online"
            app:layout_constraintTop_toBottomOf="@+id/brp_launcher_server_title" />

        <ImageView
            android:id="@+id/brp_launcher_server_shipping"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shipping_server_on"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/brp_launcher_server_online"
            app:layout_constraintTop_toBottomOf="@+id/brp_launcher_server_online" />

        <ImageView
            android:id="@+id/brp_launcher_server_double"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:background="@drawable/double_server_on"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/brp_launcher_server_shipping"
            app:layout_constraintTop_toTopOf="@+id/brp_launcher_server_shipping" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
